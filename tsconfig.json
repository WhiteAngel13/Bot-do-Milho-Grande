{
  "compilerOptions": {
    "incremental": true,
    "outDir": "dist",
    "rootDirs": [
      "src",
      // "tests"
    ],
    "target": "es2021",
    "module": "commonjs",
    "sourceMap": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": "src",
    "paths": {
      "@/*": [
        "*"
      ],
    },
    "strict": true,
    "noImplicitOverride": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowJs": true,
  },
  // "include": [
  //   "src",
  //   "tests"
  // ]
}